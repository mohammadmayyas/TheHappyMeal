@model IEnumerable<TheHappyMeal.Models.UserRolesViewModel>

@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="wrapper">
    <div class="content" style="width: 100%">
        <div class="container">
            <div class="page-title">
                <h3>
                    Customers
                    <a href="@Url.Action("AddCustomer")" class="btn btn-sm btn-outline-primary float-right"><i class="fas fa-plus"></i> Add</a>
                </h3>
            </div>
            <div class="box box-primary">
                <div class="box-body">
                    <table width="100%" class="table table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th><b>User Name</b></th>
                                <th><b>Email</b></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                if (@user.Role == "") {
                                    <tr>
                                        <td>@user.Username</td>
                                        <td>@user.Email</td>
                                        <td class="text-right">
                                            <a href="@Url.Action("Edit", new { id = user.UserId })" class="btn-outline-info btn-rounded"><i class="fas fa-pen"></i></a>
                                            <a href="@Url.Action("Details", new { id = user.UserId })" class="btn-outline-danger btn-rounded"><i class="fas fa-info-circle"></i></a>
                                            <a href="@Url.Action("Delete", new { id = user.UserId })" class="btn-outline-danger btn-rounded"><i class="fas fa-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                                else
                                {
                                    continue;
                                }

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

