@model IEnumerable<TheHappyMeal.Models.ItemViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="wrapper">
    <div class="content" style="width: 100%">
        <div class="container">
            <div class="page-title">
                <h3>
                    Items
                    <a href="@Url.Action("Create")" class="btn btn-sm btn-outline-primary float-right"><i class="fas fa-plus"></i> Add</a>
                    <a href="@Url.Action("Index")" class="btn btn-sm btn-outline-primary float-right"><i class="fas fa-check"></i> Check</a>
                </h3>
            </div>
            <div class="box box-primary">
                <div class="box-body">
                    <table width="100%" class="table table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th><b>Name</b></th>
                                <th><b>Number</b></th>
                                <th><b>Price</b></th>
                                <th><b>Threshold</b></th>
                                <th><b>Number Of Meals Per Unit</b></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Number</td>
                                <td>@item.Price</td>
                                <td>@item.Threshold</td>
                                <td>@item.NofMeals</td>
                                <td class="text-right">
                                    <a href="@Url.Action("Edit", new { id = item.Item_Id })" class="btn-outline-info btn-rounded"><i class="fas fa-pen"></i></a>
                                    <a href="@Url.Action("Details", new { id = item.Item_Id })" class="btn-outline-danger btn-rounded"><i class="fas fa-info-circle"></i></a>
                                    <a href="@Url.Action("Delete", new { id = item.Item_Id })" class="btn-outline-danger btn-rounded"><i class="fas fa-trash"></i></a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

