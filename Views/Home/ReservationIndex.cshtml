@model IEnumerable<TheHappyMeal.Models.Reservation>

@{
    ViewBag.Title = "ReservationIndex";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="wrapper">
    <div class="content" style="width: 100%">
        <div class="container">
            <div class="page-title">
                <h3>
                    Reservations
                    <a href="@Url.Action("ReservationCreate")" class="btn btn-sm btn-outline-primary float-right"><i class="fas fa-plus"></i> Add</a>
                </h3>
            </div>
            <div class="box box-primary">
                <div class="box-body">
                    <table width="100%" class="table table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th><b>Name</b></th>
                                <th><b>Email</b></th>
                                <th><b>Phone</b></th>
                                <th><b>People Number</b></th>
                                <th><b>Book Date</b></th>
                                <th><b>Book Time</b></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.Email</td>
                                    <td>@item.Phone</td>
                                    <td>@item.PeopleNumber</td>
                                    <td>@item.BookDate</td>
                                    <td>@item.BookTime</td>
                                    <td class="text-right">
                                        <a href="@Url.Action("ReservationEdit", new { id = item.Id })" class="btn-outline-info btn-rounded"><i class="fas fa-pen"></i></a>
                                        <a href="@Url.Action("ReservationDelete", new { id = item.Id })" class="btn-outline-danger btn-rounded"><i class="fas fa-trash"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



