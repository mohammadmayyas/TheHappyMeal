@model IEnumerable<TheHappyMeal.Models.Meal>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="wrapper">
    <div class="content" style="width: 100%">
        <div class="container">
            <div class="page-title">
                <h3>
                    Food items
                    <a href="@Url.Action("Create")" class="btn btn-sm btn-outline-primary float-right"><i class="fas fa-plus"></i> Add</a>
                </h3>
            </div>
            <div class="box box-primary">
                <div class="box-body">
                    <table width="100%" class="table table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th><b>Name</b></th>
                                <th><b>Profit</b></th>
                                <th><b>Price</b></th>
                                <th><b>Image</b></th>
                                <th><b>Category</b></th>
                                <th><b>Cuisines</b></th>
                                <th><b>Ingredients</b></th>
                                <th><b>Preparation Time(minute)</b></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.Profit</td>
                                    <td>@item.Price</td>
                                    <td>
                                        <img src="~/Uploads/Meals/@Html.DisplayFor(modelItem => item.Image)"
                                             class="thumbnail" style="width:48px; height:48px" />
                                    </td>
                                    
                                    <td>@item.Category.Name</td>
                                    <td>@item.Cuisines.Name</td>
                                    <td>@item.Ingredients</td>
                                    <td>@item.PreparationTime</td>
                                    <td class="text-right">
                                        <a href="@Url.Action("Edit", new { id = item.MealId })" class="btn-outline-info btn-rounded"><i class="fas fa-pen"></i></a>
                                        <a href="@Url.Action("Details", new { id = item.MealId })" class="btn-outline-danger btn-rounded"><i class="fas fa-info-circle"></i></a>
                                        <a href="@Url.Action("Delete", new { id = item.MealId })" class="btn-outline-danger btn-rounded"><i class="fas fa-trash"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
