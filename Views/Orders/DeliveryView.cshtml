@model IEnumerable<TheHappyMeal.Models.Order>

@{
    ViewBag.Title = "DeliveryView";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="wrapper">
    <div class="content" style="width: 100%">
        <div class="container">
            <div class="page-title">
                <h3>
                    Orders
                </h3>
            </div>
            <div class="box box-primary">
                <div class="box-body">
                    <table width="100%" class="table table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th><b>Id</b></th>
                                <th><b>Customer Name</b></th>
                                <th><b>Total Price</b></th>
                                <th><b>Date Time</b></th>
                                <th><b>Address</b></th>
                                <th><b>Phone Number</b></th>
                                <th><b>Delivery Name</b></th>
                                <th><b>Status</b></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                
                                <tr>
                                    <td>@item.ID</td>
                                    <td>@item.CustomerName</td>
                                    <td>@item.TotalPrice</td>
                                    <td>@item.Date</td>
                                    <td>@item.Address</td>
                                    <td>@item.PhoneNumber</td>
                                    <td>@item.DeliveryName</td>
                                    <td>@item.Status</td>
                                  <td class="text-right">
                                    <a href="@Url.Action("Edit", new { id = item.ID })" class="btn-outline-info btn-rounded"><i class="fas fa-pen"></i></a>
                                  </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
