@model IEnumerable<TheHappyMeal.Models.OrderDetails>

@{
    ViewBag.Title = "ChefView";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="wrapper">
    <div class="content" style="width: 100%">
        <div class="container">
            <div class="page-title">
                <h3>
                    Order Details
                    
                </h3>
            </div>
            <div class="box box-primary">
                <div class="box-body">
                    <table width="100%" class="table table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th><b>Id</b></th>
                                <th><b>Name</b></th>
                                <th><b>Customer Name</b></th>
                                <th><b>Price</b></th>
                                <th><b>Quantity</b></th>
                                <th><b>SubTotal</b></th>
                                <th><b>Status</b></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@item.ID</td>
                                <td>@item.Meal.Name</td>
                                <td>@item.Order.CustomerName</td>
                                <td>@item.Price</td>
                                <td>@item.Quantity</td>
                                <td>@item.subTotal</td>
                                <td>@item.Status</td>
                                <td class="text-right">
                                    <a href="@Url.Action("Edit", new { id = item.ID })" class="btn-outline-info btn-rounded"><i class="fas fa-pen"></i></a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

